<% include partials/menu %>

<div class="ui container">
    <h1 class="ui centered header">Profile</h1>
    <hr>
    <div class="section">


        <img class="ui small centered circular image" src="<%= data.avatar %>">
        <p class="ui grid centered"><a class="ui small button centered teal" href="/user/avatar"> Change Avatar </a></p>
        <div class="ui grid">
            <form action="/user/update/" method="post" class="ui centered form">
                <div class="field">
                  <label>Username</label>
                  <div class="ui floating message">
                    <p><%= data.username %></p>
                  </div>
                </div>
                <div class="field">
                  <label>Email</label>
                  <div class="ui floating message">
                    <p><%= data.email %></p>
                  </div>
                </div>
                <div class="field">
                    <label>Name</label>
                    <input type="text" name="name" value="<%= data.name %>">
                </div>
                <div class="field">
                    <label>Location</label>
                    <input type="text" name="location" value="<%= data.location %>">
                </div>
                <div class="field">
                    <label>Bio</label>
                    <textarea name="bio" rows="4" cols="40"><%= data.bio %></textarea>
                </div>
                <input type="hidden" name="avatar" value=<%=data.avatar %>>
                <button class="ui right floated  orange button" type="submit">Update</button>
            </form>
        </div>


    </div>
</div>

